#!/bin/bash

# Function to decode base64 and parse JSON
decode_base64() {
  echo $1 | base64 --decode | jq .
}

# Sample base64-encoded JSON string
BASE64_STRING="eyJuYW1lIjogImV4YW1wbGUiLCAidmVyc2lvbiI6ICIxLjAuMCJ9"

# Test the function
echo "Decoding base64 string: $BASE64_STRING"
DECODED_JSON=$(decode_base64 $BASE64_STRING)

# Output the decoded JSON
echo "Decoded JSON:"
echo "$DECODED_JSON"
