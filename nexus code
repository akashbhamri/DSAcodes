#!/bin/bash

# Nexus Repository Manager details
NEXUS_URL="http://your-nexus-url"
CREDENTIALS="username:password"

# Function to decode base64 and parse JSON
decode_base64() {
  echo $1 | base64 --decode | jq .
}

# Function to get the size of a component and convert to human-readable format
get_component_size() {
  COMPONENT_ID=$1
  echo "Fetching assets for component ID: $COMPONENT_ID"
  ASSETS=$(curl -u $CREDENTIALS -X GET "$NEXUS_URL/service/rest/v1/components/$COMPONENT_ID/assets" | jq -r '.items[] | @base64')
  TOTAL_SIZE=0

  for ASSET in $ASSETS; do
    DECODED_ASSET=$(decode_base64 $ASSET)
    ASSET_SIZE=$(echo $DECODED_ASSET | jq -r '.size')
    ASSET_NAME=$(echo $DECODED_ASSET | jq -r '.path')
    echo "Asset: $ASSET_NAME, Size: $ASSET_SIZE bytes"
    TOTAL_SIZE=$((TOTAL_SIZE + ASSET_SIZE))
  done

  # Convert bytes to human-readable format (MB, GB, TB)
  if [ $TOTAL_SIZE -gt $((1024*1024*1024)) ]; then
    SIZE=$(echo "scale=2; $TOTAL_SIZE / 1024 / 1024 / 1024" | bc)
    echo "${SIZE} GB"
  elif [ $TOTAL_SIZE -gt $((1024*1024)) ]; then
    SIZE=$(echo "scale=2; $TOTAL_SIZE / 1024 / 1024" | bc)
    echo "${SIZE} MB"
  elif [ $TOTAL_SIZE -gt 1024 ]; then
    SIZE=$(echo "scale=2; $TOTAL_SIZE / 1024" | bc)
    echo "${SIZE} KB"
  else
    echo "${TOTAL_SIZE} bytes"
  fi
}

# Function to get repository and blob store details of a component
get_component_details() {
  COMPONENT_ID=$1
  echo "Fetching repository and blob store details for component ID: $COMPONENT_ID"
  COMPONENT_DATA=$(curl -u $CREDENTIALS -X GET "$NEXUS_URL/service/rest/v1/components/$COMPONENT_ID")
  REPOSITORY=$(echo $COMPONENT_DATA | jq -r '.repository')
  BLOB_STORE=$(echo $COMPONENT_DATA | jq -r '.repositoryBlobStoreName')
  echo "Repository: $REPOSITORY, Blob Store: $BLOB_STORE"
}

# Test Component ID (Replace with a real component ID for actual testing)
TEST_COMPONENT_ID="example-component-id"

# Testing get_component_size function
echo "Testing get_component_size function..."
COMPONENT_SIZE=$(get_component_size $TEST_COMPONENT_ID)
echo "Component Size: $COMPONENT_SIZE"

# Testing get_component_details function
echo "Testing get_component_details function..."
get_component_details $TEST_COMPONENT_ID
