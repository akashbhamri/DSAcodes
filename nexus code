#!/bin/bash

# Nexus Repository Manager details
NEXUS_URL="http://your-nexus-url"
CREDENTIALS="username:password"
REPOSITORY_NAME="your-repository-name"

# Make a simple API call to list repositories
response=$(curl -u $CREDENTIALS -X GET "$NEXUS_URL/service/rest/v1/repositories" -w "%{http_code}" -o /dev/null -s)

# Check the HTTP status code
if [ "$response" -eq 200 ]; then
  echo "API call successful. Nexus URL and credentials are correct."
else
  echo "API call failed with status code: $response. Check your Nexus URL and credentials."
fi
