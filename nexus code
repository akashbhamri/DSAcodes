#!/bin/bash

NEXUS_URL="http://your-nexus-url"
USERNAME="your-username"
PASSWORD="your-password"

# Test credentials authentication
if curl -u $USERNAME:$PASSWORD -s "$NEXUS_URL/service/rest/v1/repositories" | jq -e '.' > /dev/null; then
    echo "Credentials are valid for Nexus URL: $NEXUS_URL"
else
    echo "Error: Invalid credentials for Nexus URL: $NEXUS_URL"
fi
