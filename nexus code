#!/bin/bash

# Nexus Repository Manager details
NEXUS_URL="http://your-nexus-url"
CREDENTIALS="username:password"
REPOSITORY_NAME="repository-name"

# Function to list all component IDs in a repository
list_component_ids() {
  curl -u $CREDENTIALS -X GET "$NEXUS_URL/service/rest/v1/components?repository=$REPOSITORY_NAME" | jq -r '.items[].id'
}

# List and display component IDs
echo "Listing all component IDs in repository: $REPOSITORY_NAME"
list_component_ids
