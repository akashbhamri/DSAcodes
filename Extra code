#!/bin/bash

# UDeploy server URL
BASE_URL="https://your-udeploy-server-url.com"

# API endpoint to validate credentials (this example uses the /applications endpoint)
ENDPOINT="/cli/application"

# Your UDeploy username and password
USERNAME="your-username"
PASSWORD="your-password"

# Perform the API call
response=$(curl -u "$USERNAME:$PASSWORD" -s -o /dev/null -w "%{http_code}" "$BASE_URL$ENDPOINT")

# Check the response code
if [ "$response" -eq 200 ]; then
  echo "Credentials are valid."
else
  echo "Invalid credentials or unable to reach the server. HTTP status code: $response"
fi
